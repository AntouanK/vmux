body
  margin: 0px
  background: #111;
  color: #CCC
  font-family: 'Source Sans Pro', sans-serif
  font-weight: 200
  font-size: 20px
  position: relative

html, body 
  height: 100%
  overflow: hidden

a
  text-decoration: none

a:hover
  text-decoration: none

.modal
  color: #666
  text-align: center
  margin: 100px 0px
  .btn
    margin-right: 10px
  .img-circle
    width: 48px
    height: 48px

#homepage
  text-align: center
  .btn
    margin: 0px 10px
  .logo
    img
      width: 100px
      padding: 10px
    margin-top: 50px
    font-size: 16px
  .login
    p
      font-size: 70px
      line-height: 70px
      padding: 10px
      margin-bottom: 20px
    margin-top: 200px 
  .about
    width: 60%
    margin: 0 auto
    margin-top: 50px
    font-size: 16px
    color: #666

#github
  position: fixed
  bottom: 10px
  text-align: center
  width: 100%
  font-size: 15px

#room
  height: 100%

  #streams
    position: relative
    z-index: 0
    float: right
    width: 60%
    height: 100%

    .local
      -webkit-transform: rotateY(-180deg)
      transform: rotateY(-180deg)

    .stream-view
      width: 50%
      float: left

      video
        width: 100%

      .screen_name
        position: absolute
        font-size: 16px
        margin: -35px 0px 0px 5px
        padding: 0px 10px
        background: #111
        opacity: 0.8
        border-radius: 15px


  #chat
    position: relative
    width: 40%
    float: left
    height: 100%

    #chat-messages
      position: relative
      padding: 30px 50px 60px 100px
      height: 100%
      width: 100%
      overflow: scroll
      font-size: 18px
      ul
        padding: 0px
        list-style: none

      .chat-message
        .username
          text-transform: uppercase
          color: #2a6496

    #chat-input
      position: absolute
      bottom: 10px
      left: 100px
      padding: 0px 10px 0px 0px

#home, #profile
  position: relative
  min-width: 100%
  min-height: 100%
  width: 100%
  height: 100%

  .call
    display: none

  #placeholder
    text-align: center
    margin-top: 50px

#bgvideo
  position: absolute
  z-index: 1
  top: 0
  left: 0
  overflow: hidden
  width: 100%

  video
    object-fit: contain
    width: 100%
    -webkit-transform: rotateY(-180deg)
    -webkit-filter:blur(10px)
    transform: rotateY(-180deg)
    filter: blur(10px)

#wrapper
  position: absolute
  z-index: 20
  width: 100%
  height: 100%
  top: 0
  left: 0
  overflow: hidden

#background 
  z-index: 0
  position: absolute
  width: 100%
  height: 100%
  top: 0
  left: 0
  background: #000
  opacity: 0.6


#container
  position: relative
  width: 100%
  height: 100%
  padding: 0px 100px

  #greeting
    padding: 10px
    font-size: 50px
    line-height: 70px
    font-style: italic

#sidebar
  z-index: 10
  position: fixed
  top: 0
  left: 0
  width: 80px
  height: 100%
  text-align: center
  font-size: 14px
  background: transparent

  #menu
    margin-top: 60px
    img
      width: 32px
    ul
      list-style: none
      padding: 0px
    li
      margin-top: 30px

  #content

    #user
      margin-top: 30px
      img
        width: 48px
        height: 48px

    #logo
      position: absolute
      bottom: 70px
      width: 100%
      -webkit-transform: rotate(-90deg)
      transform: rotate(-90deg)
      img
        width: 80px


#conversation
  display: none

.user
  text-align: center
  width: 150px
  float: left
  padding: 10px

#singleuser
  position: absolute
  top: 30%
  left: 50%
  width: 200px
  margin-left: -100px
  text-align: center

#one-to-one
  #remote
    z-index: 1
    position: absolute
    width: 100%

  #local
    z-index: 2
    position: fixed
    bottom: 30px
    right: 30px
    width: 200px
    box-shadow: 0px 0px 15px 5px #111
    -webkit-transform: rotateY(-180deg)
    transform: rotateY(-180deg)

  #options
    z-index: 3
    position: absolute
    top: 30px
    right: 30px
    #hangup
      margin-left: 10px

  #chat-messages
    z-index: 3
    position: absolute
    bottom: 70px
    left: 30px
    height: 200px
    width: 335px
    overflow: scroll
    font-size: 18px
    ul
      padding: 0px
      list-style: none
    li
      line-height: 18px

    .chat-message
      display: inline-block
      float: left


    .loopback
      float: right

    .bubble
      background: #333
      opacity: 0.6
      border-radius: 10px
      padding: 4px 10px
      margin-bottom: 2px
      max-width: 80%
      .username
        display: none

  #chat-input
    z-index: 3
    position: absolute
    bottom: 15px
    left: 30px
    opacity: 0.8

.clear
  clear: both
